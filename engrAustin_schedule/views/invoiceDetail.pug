extends base

block content
  main
    h2.page__subject invoice details
    - const paymentCount = Number(invoice.paymentId.length)
    if paymentCount > 0
      .table-wrapper
        .heading__title Payment Info
        table.table-data
          tr
            th payment tag
            th Description
            th Amount
            th Date 
          each payment in invoice.paymentId
              tr
                td= payment.paymentTag
                td= payment.paymentDetails
                td= payment.paymentAmount.toLocaleString(en-us, { style: 'currency', currency: 'USD' })
                td= payment.paymentDate.toLocaleString(en-us, {dateStyle: 'medium'})
    else
      p.empty__record no payment record exist on this invoice!

    // Horizontal Line
    .line &nbsp;
    // User Resources Data Display
    .resource-details
      .heading__title.ma-bt-lg Invoice Info
    .form__div
      label.label__item Invoice No
        input#inv-no.form__input.half(type='text', required)
      label.label__item Description
        input#inv-desc.form__input.half(type='text',required)
      label.label__item WHT
        input#wht-desc.form__input(type='text',required)
      label.label__item Invoice No
        input#inv-no.form__input(type='text', required)
      label.label__item Description
        input#inv-desc.form__input(type='text',required)
