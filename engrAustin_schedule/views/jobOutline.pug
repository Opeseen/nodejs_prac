extends base

block content
  main
    h2.page__subject Job Overview
    .table-wrapper
      table.table-data
        tr
          th.th__size-medium Job ID
          th.th__size-small Type
          th Description
          th.th__size-medium PO
          th.th__size-small option
        each job in jobs
          tr
            td= job.jobID
            td= job.type
            td= job.description
            td= job.jobPO
            td
             .btn--green
              a(href=`/job/${job.slug}`) Details