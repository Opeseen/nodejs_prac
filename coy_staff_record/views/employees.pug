extends base

block content
  main
    h2.body-title Employees Overview
    if allEmployees
      section.EmployeeTableSection
        .table-wrapper
          .heading__title Employees Info
          table.table-data
            tr
              th.th__size-small FirstName
              th.th__size-small LastName
              th.th__size-small Email
              th.th__size-small State
              th.th__size-small Nationality
              th.th__size-small Option

            each employee in allEmployees
              tr
                td= employee.firstname
                td= employee.lastname
                td= employee.email
                td= employee.state
                td= employee.nationality
                td
                  .btn--green
                    a(href=`/employee/view?eid=${employee.id}`) Details

    else
      section.emptyEmployeeRecord
        p.empty__record no employee record found in this organization